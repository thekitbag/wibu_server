generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Journey {
  id             String  @id @default(cuid())
  title          String
  paid           Boolean @default(false)
  shareableToken String? @unique
  stops          Stop[]
}

model Stop {
  id        String  @id @default(cuid())
  title     String
  note      String?
  image_url String
  order     Int
  journeyId String
  journey   Journey @relation(fields: [journeyId], references: [id], onDelete: Cascade)
}
